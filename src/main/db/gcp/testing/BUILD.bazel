load("@io_bazel_rules_kotlin//kotlin:kotlin.bzl", "kt_jvm_import")

package(default_visibility = ["//src/test:__subpackages__"])

# The bazel test runner is used to bootstrap tests that first run a spanner
# emulator. This is normally sourced in automatically to a jvm test rule
# however the macro does not use a jvm test rule so `bazel test //...:all`
# will work. The jar is thus imported here so it may be included in the
# spanner_emulator_test macro.
kt_jvm_import(
    name = "bazel_test_runner_jar",
    jar = "@bazel_tools//tools/jdk:TestRunner_deploy.jar",
    srcjar = "@bazel_tools//tools/jdk:TestRunner_deploy.jar",
)

sh_library(
    name = "spanner_emulator_bootstrap",
    srcs = ["spanner_emulator_bootstrap.sh"],
)
