load("@io_bazel_rules_kotlin//kotlin:kotlin.bzl", "kt_jvm_library")
load("@io_bazel_rules_docker//java:image.bzl", "java_image")

package(
    default_testonly = True,
    default_visibility = [
        "//src:docker_image_deployment",
        "//src/main/kotlin/org/wfanet/measurement:__subpackages__",
        "//src/test/kotlin/org/wfanet/measurement:__subpackages__",
    ],
)

kt_jvm_library(
    name = "fake_storage_service",
    srcs = glob(["*.kt"]),
    runtime_deps = ["@io_grpc_grpc_java//netty"],
    deps = [
        "//imports/java/io/grpc:api",
        "//imports/kotlin/kotlinx/coroutines:core",
        "//src/main/kotlin/org/wfanet/measurement/service/common",
        "//src/main/kotlin/org/wfanet/measurement/storage/filesystem",
        "//src/main/proto/wfa/measurement/internal/testing:forwarded_storage_service_kt_jvm_grpc",
    ],
)

java_binary(
    name = "fake_storage_server",
    main_class = "org.wfanet.measurement.service.testing.storage.MainKt",
    runtime_deps = [":fake_storage_service"],
)

java_image(
    name = "fake_storage_server_image",
    main_class = "org.wfanet.measurement.service.testing.storage.MainKt",
    visibility = ["//src:docker_image_deployment"],
    runtime_deps = [":fake_storage_service"],
)
