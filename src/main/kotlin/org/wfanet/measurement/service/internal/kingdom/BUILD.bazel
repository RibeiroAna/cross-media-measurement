load("@io_bazel_rules_kotlin//kotlin:kotlin.bzl", "kt_jvm_library")
load("@rules_java//java:defs.bzl", "java_binary")
load("@io_bazel_rules_docker//java:image.bzl", "java_image")

package(default_visibility = [
    "//src/main/kotlin/org/wfanet/measurement:__subpackages__",
    "//src/test/kotlin/org/wfanet/measurement:__subpackages__",
])

kt_jvm_library(
    name = "kingdom",
    srcs = glob(
        ["*.kt"],
        exclude = ["*Main.kt"],
    ),
    deps = [
        "//:grpc_core",
        "//imports/java/com/google/cloud/spanner",
        "//src/main/kotlin/org/wfanet/measurement/common",
        "//src/main/kotlin/org/wfanet/measurement/db/gcp",
        "//src/main/kotlin/org/wfanet/measurement/db/kingdom",
        "//src/main/kotlin/org/wfanet/measurement/db/kingdom/gcp",
        "//src/main/kotlin/org/wfanet/measurement/service/common",
        "//src/main/proto/wfa/measurement/internal/kingdom:report_config_schedule_java_proto",
        "//src/main/proto/wfa/measurement/internal/kingdom:report_config_schedule_storage_service_kt_jvm_grpc",
        "//src/main/proto/wfa/measurement/internal/kingdom:report_config_storage_service_kt_jvm_grpc",
        "//src/main/proto/wfa/measurement/internal/kingdom:report_details_java_proto",
        "//src/main/proto/wfa/measurement/internal/kingdom:report_java_proto",
        "//src/main/proto/wfa/measurement/internal/kingdom:report_log_entry_storage_service_kt_jvm_grpc",
        "//src/main/proto/wfa/measurement/internal/kingdom:report_storage_service_kt_jvm_grpc",
        "//src/main/proto/wfa/measurement/internal/kingdom:requisition_details_java_proto",
        "//src/main/proto/wfa/measurement/internal/kingdom:requisition_java_proto",
        "//src/main/proto/wfa/measurement/internal/kingdom:requisition_storage_service_kt_jvm_grpc",
        "//src/main/proto/wfa/measurement/internal/kingdom:requisition_template_java_proto",
    ],
)

kt_jvm_library(
    name = "gcp_kingdom_storage_server",
    srcs = ["GcpKingdomStorageServerMain.kt"],
    visibility = ["//visibility:public"],
    deps = [
        ":kingdom",
        "//imports/java/picocli",
        "//src/main/kotlin/org/wfanet/measurement/common",
        "//src/main/kotlin/org/wfanet/measurement/db/gcp",
    ],
)

java_binary(
    name = "GcpKingdomStorageServer",
    main_class = "org.wfanet.measurement.service.internal.kingdom.GcpKingdomStorageServerMainKt",
    runtime_deps = [":gcp_kingdom_storage_server"],
)

java_image(
    name = "gcp_kingdom_storage_server_image",
    main_class = "org.wfanet.measurement.service.internal.kingdom.GcpKingdomStorageServerMainKt",
    visibility = ["//src:docker_image_deployment"],
    runtime_deps = [":gcp_kingdom_storage_server"],
)
