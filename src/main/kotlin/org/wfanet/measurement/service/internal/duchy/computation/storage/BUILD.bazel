load("//build:defs.bzl", "test_target")
load("@rules_java//java:defs.bzl", "java_binary")
load("@io_bazel_rules_kotlin//kotlin:kotlin.bzl", "kt_jvm_library")
load("@io_bazel_rules_docker//java:image.bzl", "java_image")

package(default_visibility = [
    test_target(":__pkg__"),
    ":computation_db",
    "//src/test/kotlin/org/wfanet/measurement/duchy:__subpackages__",
    "//src/test/kotlin/org/wfanet/measurement/service/internal/duchy/computation:__subpackages__",
])

# TODO(fryej): Remove this. db package should not depend on service package.
package_group(
    name = "computation_db",
    packages = [
        "//src/main/kotlin/org/wfanet/measurement/db/duchy/computation/...",
        "//src/test/kotlin/org/wfanet/measurement/db/duchy/computation/...",
    ],
)

kt_jvm_library(
    name = "protos",
    srcs = ["ComputationStorageServiceProtos.kt"],
    deps = [
        "//:grpc_core",
        "//src/main/proto/wfa/measurement/internal/duchy:computation_storage_service_kt_jvm_grpc",
    ],
)

kt_jvm_library(
    name = "service",
    srcs = ["ComputationStorageServiceImpl.kt"],
    deps = [
        ":protos",
        "//:grpc_core",
        "//src/main/kotlin/org/wfanet/measurement/db/duchy/computation",
        "//src/main/kotlin/org/wfanet/measurement/service/v1alpha/common",
        "//src/main/proto/wfa/measurement/internal/duchy:computation_storage_service_kt_jvm_grpc",
    ],
)

kt_jvm_library(
    name = "server",
    srcs = ["ComputationStorageServer.kt"],
    runtime_deps = [
        "@io_grpc_grpc_java//netty",
    ],
    deps = [
        ":service",
        "//imports/java/picocli",
        "//src/main/kotlin/org/wfanet/measurement/common",
        "//src/main/kotlin/org/wfanet/measurement/crypto",
        "//src/main/kotlin/org/wfanet/measurement/duchy:flags",
    ],
)

kt_jvm_library(
    name = "spanner_liquid_legions_computation_storage_server",
    srcs = ["SpannerLiquidLegionsComputationStorageServer.kt"],
    deps = [
        ":server",
        "//imports/java/picocli",
        "//src/main/kotlin/org/wfanet/measurement/common",
        "//src/main/kotlin/org/wfanet/measurement/db/duchy/computation/gcp",
        "//src/main/kotlin/org/wfanet/measurement/db/gcp",
    ],
)

java_binary(
    name = "SpannerLiquidLegionsComputationStorageServer",
    main_class = "org.wfanet.measurement.service.internal.duchy.computation.storage.SpannerLiquidLegionsComputationStorageServerKt",
    runtime_deps = [":spanner_liquid_legions_computation_storage_server"],
)

java_image(
    name = "spanner_liquid_legions_computation_storage_server_image",
    main_class = "org.wfanet.measurement.service.internal.duchy.computation.storage.SpannerLiquidLegionsComputationStorageServerKt",
    visibility = [
        "//src/main/docker:__subpackages__",
        "//src/main/kotlin/org/wfanet/measurement/tools:__subpackages__",
    ],
    runtime_deps = [":spanner_liquid_legions_computation_storage_server"],
)
