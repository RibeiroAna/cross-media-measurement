load("@rules_java//java:defs.bzl", "java_binary")
load("@io_bazel_rules_kotlin//kotlin:kotlin.bzl", "kt_jvm_library")
load("@io_bazel_rules_docker//java:image.bzl", "java_image")

package(default_visibility = [
    "//src/main/kotlin/org/wfanet/measurement:__subpackages__",
    "//src/test/kotlin/org/wfanet/measurement:__subpackages__",
])

kt_jvm_library(
    name = "storage",
    srcs = ["ComputationStorageServiceProtos.kt"],
    deps = [
        "//:grpc_core",
        "//src/main/proto/wfa/measurement/internal/duchy:computation_storage_service_kt_jvm_grpc",
    ],
)

kt_jvm_library(
    name = "computation_storage_service_impl",
    srcs = ["ComputationStorageServiceImpl.kt"],
    deps = [
        ":storage",
        "//:grpc_core",
        "//src/main/kotlin/org/wfanet/measurement/db/duchy/computation",
