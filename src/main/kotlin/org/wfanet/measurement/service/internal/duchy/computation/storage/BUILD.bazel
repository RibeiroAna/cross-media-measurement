        "//src/main/proto/wfa/measurement/internal/duchy:computation_storage_service_kt_jvm_grpc",
    ],
)

kt_jvm_library(
    name = "gcp_computation_storage_server",
    srcs = ["Main.kt"],
    runtime_deps = [
        "@io_grpc_grpc_java//netty",
    ],
    deps = [
        ":computation_storage_service_impl",
        "//imports/java/picocli",
        "//src/main/kotlin/org/wfanet/measurement/common",
        "//src/main/kotlin/org/wfanet/measurement/crypto",
        "//src/main/kotlin/org/wfanet/measurement/db/duchy/computation/gcp",
        "//src/main/kotlin/org/wfanet/measurement/duchy:flags",
    ],
)

java_binary(
    name = "GcpComputationStorageServer",
    main_class = "org.wfanet.measurement.service.internal.duchy.computation.storage.MainKt",
    visibility = ["//visibility:public"],
    runtime_deps = [":gcp_computation_storage_server"],
)

java_image(
    name = "gcp_computation_storage_server_image",
    main_class = "org.wfanet.measurement.service.internal.duchy.computation.storage.MainKt",
    visibility = ["//visibility:public"],
    runtime_deps = [":gcp_computation_storage_server"],
)
