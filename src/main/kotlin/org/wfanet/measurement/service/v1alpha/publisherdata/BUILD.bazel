java_binary(
    name = "PublisherDataServer",
    main_class = "org.wfanet.measurement.service.v1alpha.publisherdata.PublisherDataServerKt",
    runtime_deps = [
        ":publisher_data_server",
        "//imports/java/io/grpc/netty",
    ],
)

java_image(
    name = "publisher_data_server_image",
    main_class = "org.wfanet.measurement.service.v1alpha.publisherdata.PublisherDataServerKt",
    visibility = ["//src:docker_image_deployment"],
    runtime_deps = [
        ":publisher_data_server",
        "//imports/java/io/grpc/netty",
    ],
