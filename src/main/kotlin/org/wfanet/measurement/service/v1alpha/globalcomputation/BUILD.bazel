kt_jvm_library(
    name = "global_computation_server",
    srcs = ["GlobalComputationServer.kt"],
    deps = [
        ":global_computation_service",
        "//imports/java/io/grpc:api",
        "//imports/java/picocli",
        "//src/main/kotlin/org/wfanet/measurement/common",
        "//src/main/kotlin/org/wfanet/measurement/service/common",
    ],
)

java_binary(
    name = "GlobalComputationServer",
    main_class = "org.wfanet.measurement.service.v1alpha.globalcomputation.GlobalComputationServerKt",
    runtime_deps = [
        ":global_computation_server",
        "//imports/java/io/grpc/netty",
    ],
)

java_image(
    name = "global_computation_server_image",
    main_class = "org.wfanet.measurement.service.v1alpha.globalcomputation.GlobalComputationServerKt",
    visibility = ["//src:docker_image_deployment"],
    runtime_deps = [
        ":global_computation_server",
        "//imports/java/io/grpc/netty",
    ],
