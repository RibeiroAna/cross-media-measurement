kt_jvm_binary_and_image(
    name = "computation_control_server",
    srcs = ["Main.kt"],
    main_class = "org.wfanet.measurement.service.v1alpha.computationcontrol.MainKt",
    visibility = ["//visibility:public"],
    deps = [
        ":computation_control_service_impl",
    ],
)
