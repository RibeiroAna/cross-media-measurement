load("@io_bazel_rules_kotlin//kotlin:kotlin.bzl", "kt_jvm_library")
load("@io_bazel_rules_docker//java:image.bzl", "java_image")

package(default_visibility = [
    "//src/main/kotlin/org/wfanet/measurement/loadtest:__subpackages__",
    "//src/test/kotlin/org/wfanet/measurement/loadtest:__subpackages__",
])

kt_jvm_library(
    name = "loadtest",
    srcs = glob(["*.kt"]),
    deps = [
        "//src/main/kotlin/org/wfanet/measurement/crypto",
        "//src/main/kotlin/org/wfanet/measurement/db/kingdom/gcp",
        "//src/main/kotlin/org/wfanet/measurement/service/v1alpha/publisherdata:publisher_data_service",
        "//src/main/kotlin/org/wfanet/measurement/storage:client",
        "//src/main/kotlin/org/wfanet/measurement/storage/filesystem",
        "//src/main/kotlin/org/wfanet/measurement/storage/gcs",
        "//src/main/proto/wfa/measurement/api/v1alpha:global_computation_java_proto",
        "//src/main/proto/wfa/measurement/internal/loadtest:test_result_java_proto",
        "@any_sketch//src/main/java/org/wfanet/anysketch",
        "@any_sketch//src/main/java/org/wfanet/anysketch:sketch_proto_converter",
        "@any_sketch//src/main/java/org/wfanet/anysketch/crypto:sketch_encrypter_adapter",
        "@any_sketch//src/main/java/org/wfanet/estimation:estimators",
        "@any_sketch//src/main/java/org/wfanet/estimation:value_histogram",
        "@any_sketch//src/main/proto/wfa/any_sketch/crypto:sketch_encryption_methods_java_proto",
        "@any_sketch//src/main/proto/wfa/any_sketch/crypto:sketch_java_proto",
    ],
)

java_binary(
    name = "FileSystemStorageCorrectnessRunner",
    main_class = "org.wfanet.measurement.loadtest.FilesystemStorageCorrectnessRunnerKt",
    runtime_deps = [":loadtest"],
)

java_binary(
    name = "GcsCorrectnessRunner",
    main_class = "org.wfanet.measurement.loadtest.GcsCorrectnessRunnerKt",
    runtime_deps = [":loadtest"],
)

java_image(
    name = "filesystem_storage_correctness_runner_image",
    base = "@debian_java_base//image",
    data = ["//src/main/kotlin/org/wfanet/measurement/loadtest/config"],
    main_class = "org.wfanet.measurement.loadtest.FilesystemStorageCorrectnessRunnerKt",
    visibility = ["//src:docker_image_deployment"],
    runtime_deps = [":loadtest"],
)

java_image(
    name = "gcs_correctness_runner_image",
    base = "@debian_java_base//image",
    data = ["//src/main/kotlin/org/wfanet/measurement/loadtest/config"],
    main_class = "org.wfanet.measurement.loadtest.GcsCorrectnessRunnerKt",
    visibility = ["//src:docker_image_deployment"],
    runtime_deps = [":loadtest"],
)
