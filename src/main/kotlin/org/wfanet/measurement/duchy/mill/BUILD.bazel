load("@io_bazel_rules_kotlin//kotlin:kotlin.bzl", "kt_jvm_library")
load("@io_bazel_rules_docker//java:image.bzl", "java_image")

package(default_visibility = [
    "//src/main/docker:__subpackages__",
    "//src/main/kotlin/org/wfanet/measurement:__subpackages__",
    "//src/test/kotlin/org/wfanet/measurement:__subpackages__",
])

kt_jvm_library(
    name = "mill",
    srcs = glob(["*.kt"]),
    runtime_deps = ["@io_grpc_grpc_java//netty"],
    deps = [
        "//:grpc_core",
        "//imports/java/picocli",
        "//src/main/java/org/wfanet/measurement/crypto:protocol_encryption_utility",
        "//src/main/kotlin/org/wfanet/measurement/client/internal/duchy/worker",
        "//src/main/kotlin/org/wfanet/measurement/common",
        "//src/main/kotlin/org/wfanet/measurement/db/duchy/computation",
        "//src/main/kotlin/org/wfanet/measurement/db/duchy/computation/gcp",
        "//src/main/kotlin/org/wfanet/measurement/db/gcp",
        "//src/main/kotlin/org/wfanet/measurement/storage/gcs:from_flags",
        "//src/main/proto/wfa/measurement/internal:sketch_aggregation_stage_java_proto",
        "//src/main/proto/wfa/measurement/internal/duchy:computation_control_service_kt_jvm_grpc",
        "//src/main/proto/wfa/measurement/internal/duchy:protocol_encryption_methods_java_proto",
        "@com_google_protobuf//:protobuf_java",
    ],
)

java_binary(
    name = "mill_task",
    main_class = "org.wfanet.measurement.duchy.mill.MillMainKt",
    runtime_deps = [":mill"],
)

java_image(
    name = "mill_task_image",
    main_class = "org.wfanet.measurement.duchy.mill.MillMainKt",
    runtime_deps = [":mill"],
)
