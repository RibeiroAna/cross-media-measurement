kt_jvm_library(
    name = "flags",
    srcs = glob(["*Flags.kt"]),
    deps = [
        "//imports/java/picocli",
    ],
)

kt_jvm_library(
    name = "computation_stage",
    srcs = ["ComputationStage.kt"],
    visibility = DEFAULT_VISIBILITY + [
        "//src/main/kotlin/org/wfanet/measurement/storage:__pkg__",
        "//src/main/kotlin/org/wfanet/measurement/db/duchy/computation:__subpackages__",
        "//src/test/kotlin/org/wfanet/measurement/db/duchy/computation:__subpackages__",
