    deps = [
        "//src/main/proto/wfa/measurement/api/v1alpha:global_computation_service_kt_jvm_grpc",
        "//src/main/proto/wfa/measurement/internal:sketch_aggregation_stage_java_proto",
        "//src/main/proto/wfa/measurement/internal/duchy:computation_protocols_java_proto",
    ],
)

kt_jvm_library(
    name = "computation_control_requests",
    srcs = ["ComputationControlRequests.kt"],
    deps = [
        "//imports/java/com/google/protobuf",
        "//imports/kotlin/kotlinx/coroutines:core",
        "//src/main/kotlin/org/wfanet/measurement/common",
        "//src/main/proto/wfa/measurement/internal/duchy:computation_control_service_java_proto",
    ],
)

kt_jvm_library(
    name = "duchy_public_keys",
    srcs = ["DuchyPublicKeys.kt"],
    visibility = DEFAULT_VISIBILITY + [
        "//src/main/kotlin/org/wfanet/measurement/db/duchy/computation:__subpackages__",
        "//src/test/kotlin/org/wfanet/measurement/db/duchy/computation:__subpackages__",
    ],
    deps = [
        "//imports/java/picocli",
        "//src/main/kotlin/org/wfanet/measurement/common",
        "//src/main/kotlin/org/wfanet/measurement/common/crypto",
        "//src/main/proto/wfa/measurement/config:duchy_public_key_config_java_proto",
    ],
)
