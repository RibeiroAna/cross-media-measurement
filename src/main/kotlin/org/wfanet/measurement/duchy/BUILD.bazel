load("//build:defs.bzl", "test_target")
load("@io_bazel_rules_kotlin//kotlin:kotlin.bzl", "kt_jvm_library")

DEFAULT_VISIBILITY = [
    ":__subpackages__",
    test_target(":__subpackages__"),
    "//src:duchy_services",
    "//src/test/kotlin/org/wfanet/measurement/integration:__subpackages__",
]

