    name = "gcp_kingdom_data_server",
    srcs = ["GcpKingdomDataServerMain.kt"],
    visibility = ["//visibility:public"],
    deps = [
        "//imports/java/picocli",
        "//src/main/kotlin/org/wfanet/measurement/common",
        "//src/main/kotlin/org/wfanet/measurement/db/gcp",
        "//src/main/kotlin/org/wfanet/measurement/service/internal/kingdom",
