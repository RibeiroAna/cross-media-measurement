java_image(
    name = "gcp_kingdom_data_server_image",
    main_class = "org.wfanet.measurement.kingdom.deploy.gcloud.server.GcpKingdomDataServerMainKt",
    visibility = ["//src:docker_image_deployment"],
    runtime_deps = [":gcp_kingdom_data_server"],
