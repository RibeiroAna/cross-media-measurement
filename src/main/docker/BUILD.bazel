    name = "push_computation_control_server_image",
    format = "Docker",
    image = "//src/main/kotlin/org/wfanet/measurement/service/v1alpha/computationcontrol:computation_control_server_image",
    registry = "gcr.io",
    repository = "ads-open-measurement/computationcontrol",
)

