load("@io_bazel_rules_docker//container:container.bzl", "container_push")

# These rules push Docker images to the Google Cloud container registry.
# 'bazel build' builds the tarball, 'bazel run' will actually push it.

container_push(
    name = "push_publisher_data_server_image",
    format = "Docker",
    image = "//src/main/kotlin/org/wfanet/measurement/service/v1alpha/publisherdata:publisher_data_server_image",
    registry = "gcr.io",
    repository = "ads-open-measurement/publisherdata",
)

container_push(
    name = "push_requisition_server_image",
    format = "Docker",
    image = "//src/main/kotlin/org/wfanet/measurement/service/v1alpha/requisition:requisition_server_image",
    registry = "gcr.io",
    repository = "ads-open-measurement/requisition",
)

container_push(
    name = "push_mill_task_image",
    format = "Docker",
    image = "//src/main/kotlin/org/wfanet/measurement/service/internal/duchy/mill:mill_task_image",
    registry = "gcr.io",
    repository = "ads-open-measurement/peasant",
)

container_push(
    name = "push_gcp_kingdom_storage_server_image",
    format = "Docker",
    image = "//src/main/kotlin/org/wfanet/measurement/service/internal/kingdom:gcp_kingdom_storage_server_image",
    registry = "gcr.io",
    repository = "ads-open-measurement/gcp_kingdom_storage_server",
)

filegroup(
    name = "deploy_to_kind_yaml",
    srcs = ["deploy_to_kind.yaml"],
    visibility = ["//src/main/kotlin/org/wfanet/measurement/tools:__subpackages__"],
)
